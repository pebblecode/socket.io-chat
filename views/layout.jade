html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js')
    script(src='/socket.io/socket.io.js')
    script
      var socket = io.connect();

      socket.on('connect', function () {
      });

      socket.on('reconnect', function () {
      });

      socket.on('reconnecting', function () {
      });

      socket.on('error', function (e) {
      });

      socket.on('nicknames', function (data) {
        $('#right-column').empty().append($('<ul>'));
        for(var i=0; i<data.length; i++) {
          $('#right-column ul').append('<li>' + data[i] + '</li>');
        }
      });
      socket.on('announcement', function (data) {
       $('#chat-box').append($('<p>').append($('<em>').text(data.message)));
      });

      socket.on('user message', function (data) {
        $('#chat-box').append($('<p>').append($('<strong>').text(data.nick), data.message));
      });

      $(function () {
        /*
        * Set the nickname for a user
        * A callback is received from the server. If it is true then the name 
        * already taken. 
        */
        $('#set-nickname').submit(function() {
          socket.emit('nickname', $('#nickname').val(), function (data) {
            if (!data) {
              $('#login').hide();
              $('#wrapper').show();
            } else {
              $('#set-nickname')
                .prepend($('<p>')
                .append($('<strong>')
                .text('name already taken')));
            }
          });
          return false;
        });

        /*
        * Sends a message to the server
        */
        $('#send-message').submit(function () {
          socket.emit('user message', $('#message').val());
          clear();
          return false;
        });

        function clear () {
          $('#message').val('').focus();
        };
      });

  body!= body

    section#login
      form#set-nickname
        input#nickname(type='text')
        input(type='submit')
    section#wrapper
      section#left-column 
        section#chat-box 
        section#message-box 
          form#send-message
            textarea#message
            input(type='submit')
      section#right-column 


